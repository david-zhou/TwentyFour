<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:id="@+id/score_label"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/score_counter"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/score_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/target_number"
        android:text=""
        android:layout_toRightOf="@id/score_label"
        android:layout_marginLeft="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/timer"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nextCards"
        android:layout_toEndOf="@+id/nextCards" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="64dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/operator_plus"
        android:text="+"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/operator_minus"
        android:text="-"
        android:layout_toRightOf="@+id/operator_plus"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="64dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/operator_multiply"
        android:text="*"
        android:layout_below="@+id/operator_plus"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/operator_divide"
        android:text="/"
        android:layout_below="@+id/operator_minus"
        android:layout_toRightOf="@+id/operator_multiply"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/operator_open_parenthesis"
        android:text="("
        android:layout_below="@+id/operator_multiply"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/operator_close_parenthesis"
        android:text=")"
        android:layout_below="@+id/operator_divide"
        android:layout_toRightOf="@+id/operator_open_parenthesis"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operation_area"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="32dp"
        android:text="Operation area"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/remove_last"
        android:text="&lt;-"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_area"
        android:text="Result"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/remove_last"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Skip"
        android:id = "@+id/skip_cards"
        android:layout_below="@+id/operation_area"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Next"
        android:id = "@+id/nextCards"
        android:layout_below="@+id/operation_area"
        android:layout_toRightOf="@+id/skip_cards"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
