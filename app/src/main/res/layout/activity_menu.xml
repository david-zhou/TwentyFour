<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.dzt.twentyfour.Activity.MenuActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_normal"
        android:text="NORMAL"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_survival"
        android:text="SURVIVAL"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_arcade"
        android:text="ARCADE"
        android:layout_below="@+id/menu_button_survival"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_relax"
        android:text="RELAX"
        android:layout_below="@+id/menu_button_arcade"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_random"
        android:text="RANDOM"
        android:layout_below="@+id/menu_button_relax"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_scoreboard"
        android:text="SCOREBOARD"
        android:layout_below="@+id/menu_button_random"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
