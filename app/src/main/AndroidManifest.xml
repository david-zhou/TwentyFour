<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzt.twentyfour" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity.MenuActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ArcadeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_arcade"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity.RelaxActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_relax"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity.ScoresActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_scores"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity.RandomActivity"
            android:label="@string/title_activity_random" >
        </activity>
    </application>

</manifest>
